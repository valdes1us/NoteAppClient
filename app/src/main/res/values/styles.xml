<resources>
    <!-- Базовая тема приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:fontFamily">@font/montserratalternatesregular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserratalternatesregular</item>
        <item name="android:textColor">#FFFFFF</item>


    </style>

        <style name="DarkSpinnerStyle" parent="Widget.AppCompat.Spinner">
            <item name="android:background">@drawable/spinner_background</item>
            <item name="android:popupBackground">#2e2e2e</item>
            <item name="android:textColor">#FFFFFF</item>
        </style>

    <style name="DarkSpinnerStyle2" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">#00000000</item>
        <item name="android:textColor">#00000000</item> <!-- Прозрачный текст -->
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="android:textColorSecondary">@android:color/black</item>
    <item name="android:textColorTertiary">@android:color/black</item>

    </style>



</resources>
