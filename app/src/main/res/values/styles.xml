<resources>
    <!-- Базовая тема приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="android:fontFamily">@font/montserratalternatesregular</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Стили для светлого режима -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="android:fontFamily">@font/montserratalternatesregular</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="ToolbarLight" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/black</item>
    </style>

    <style name="ToolbarDark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
    <style name="ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserratalternatesregular</item>
        <item name="android:textColor">#FFFFFF</item>


    </style>



    <style name="DarkSpinnerStyle2" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">#00000000</item>
        <item name="android:textColor">#00000000</item> <!-- Прозрачный текст -->
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="android:textColorSecondary">@android:color/black</item>
    <item name="android:textColorTertiary">@android:color/black</item>

    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Другие стили и атрибуты -->
    </style>

    <style name="AppTheme.Dark.Calendar" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@color/grey</item>
    </style>

    <style name="AppTheme.Dark.Calendar.Clock" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/grey</item>
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:windowBackground">@color/grey</item>
    </style>
    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:track">@drawable/custom_switch_track</item>
        <item name="android:switchMinWidth">48dp</item>

        <item name="android:switchPadding">50dp</item>
    </style>
</resources>
