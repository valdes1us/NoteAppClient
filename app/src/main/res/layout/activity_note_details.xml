<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1f1f1f"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NoteDetailsActivity"
    android:id="@+id/create_note">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e2e2e"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Контейнер для кнопки и заголовка -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Кнопка "Назад" -->
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/an"
                android:contentDescription="Назад"
                android:padding="0dp" />

            <!-- Поле ввода заголовка -->
            <EditText
                android:id="@+id/toolbarTitleEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Название заметки"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:background="@android:color/transparent"
                style="@style/CustomEditText"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/voice_record">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:hint="Название"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                style="@style/CustomEditText"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/contentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:hint="Введите текст"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                style="@style/CustomEditText"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2e2e2e"
        android:padding="16dp">

        <!-- Первая иконка -->
        <ImageView
            android:id="@+id/font_change"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:src="@drawable/font"
            android:contentDescription="Иконка 1"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/bg_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bucket"
            android:contentDescription="Иконка 1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/font_change"
            android:layout_toLeftOf="@id/color_change"
            />

        <!-- Вторая иконка -->
        <ImageView
            android:id="@+id/color_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/rgb"
            android:layout_centerVertical="true"
            android:contentDescription="Иконка 2" />

        <!-- Spinner для выбора цвета -->
        <ImageView
            android:id="@+id/list_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list"
            android:contentDescription="Иконка 1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/color_change"
            android:layout_toLeftOf="@id/font_style_change"
            />

        <ImageView
            android:id="@+id/font_style_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/feather"
            android:layout_centerInParent="true"
            android:contentDescription="Иконка 2"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/voice_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/microphone"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_above="@id/toolbar_bottom"
        android:contentDescription="Запись голоса" />

</RelativeLayout>
